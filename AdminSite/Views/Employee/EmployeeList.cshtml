@model IEnumerable<AdminSite.Models.ApplicationEmployee>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<div class="box">
    <div class="box-header">
        <h3 class="box-title">Customer List</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th width="5px">SrNo</th>
                    <th>Employee Name</th>
                    <th>MobileNo</th>
                    <th>Branch Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 0;
                }
                @foreach (var item in Model)
                {
                    {
                        index = index + 1;
                    }
                    <tr>
                        <td>@index</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@Html.DisplayFor(modelItem => item.MobileNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.BranchName)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                        <td>
                            <button id="btnEdit"><i class="fa fa-pencil"></i></button>
                            <button id="btnDelete" onclick="DeleteCustomer(@item.Id)"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th width="5px">SrNo</th>
                    <th>Customer Name</th>
                    <th>Account No</th>
                    <th>Register MobileNo</th>
                    <th>Branch Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->

<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
    });

    
</script>